<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/work"
    android:layout_height="match_parent"
    tools:context=".BusinessAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <EditText
            android:id="@+id/workPlace"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="name of the work place" />

        <EditText
            android:id="@+id/Requirments"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="requirments for work" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="number" />

        <Button
            android:id="@+id/btaddJob"
            android:layout_width="match_parent"
            android:background="@drawable/buisnes_button"
            android:layout_height="wrap_content"
            android:text="add job" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>